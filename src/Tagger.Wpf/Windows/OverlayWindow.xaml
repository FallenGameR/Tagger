<Window x:Class="Tagger.Wpf.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="False"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"        
        Title="OverlayWindow" Height="50" Width="140">
    <Grid>
        <Rectangle >
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="DarkGreen" Offset="0.0" />
                    <GradientStop Color="ForestGreen" Offset="0.4" />
                    <GradientStop Color="DarkSeaGreen" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
