<Window 
    x:Class="Tagger.Wpf.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None" 
    ResizeMode="NoResize" 
    ShowInTaskbar="False"        
    MinHeight="50" MinWidth="140" 
    MouseRightButtonUp="Window_MouseRightButtonUp">
    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <SolidColorBrush Color="{Binding Path=Color, Mode=OneWay}" />
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock 
            Text="{Binding Path=Text, Mode=OneWay}"
            FontSize="{Binding Path=FontSize, Mode=OneWay}"
            FontFamily="{Binding Path=FontFamily, Mode=OneWay}"
            Foreground="{Binding Path=FontColor, Mode=OneWay}"
            />
    </Grid>
</Window>
