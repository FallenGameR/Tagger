<Window x:Class="Tagger.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Tagger.Wpf.Views"
        Title="Tagger hotkey setup"
        Background="#FAFAFA"
        SizeToContent="WidthAndHeight"
        StateChanged="Window_StateChanged"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <views:TrayIconControl />
        <views:HotkeyControl x:Name="TagHotkeyControl" />
    </StackPanel>
</Window>
