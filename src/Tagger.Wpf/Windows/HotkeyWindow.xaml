<Window x:Class="Tagger.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:e="clr-namespace:Utils.Prism;assembly=Tagger.Lib"
        xmlns:v="clr-namespace:Tagger.Wpf.Views"
        Title="Tagger hotkey setup"
        Background="#FAFAFA"
        SizeToContent="WidthAndHeight"
        StateChanged="Window_StateChanged"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <v:TrayIconControl />
        <v:HotkeyControl x:Name="TagHotkeyControl"
                         Handler="{e:StaticMethod Tagger.RegistrationManager.GlobalHotkeyHandle}"
                         Purpose="Tag hotkey" />
    </StackPanel>
</Window>
