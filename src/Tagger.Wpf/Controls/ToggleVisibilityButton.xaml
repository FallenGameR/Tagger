<UserControl x:Class="Tagger.Controls.ToggleVisibilityButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="toggleVisibilityButtonUserControl"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Button Content="{Binding Path=UntoggledText, ElementName=toggleVisibilityButtonUserControl}" />
</UserControl>
